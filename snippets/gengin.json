{
    "Start Game": {
        "prefix": "Start_Game",
        "body": [
            "#include \"GEngin.au3\"",
            "#include <GUIConstantsEx.au3>\n",
            ";~ To use _IsPressed",
            "#Include <Misc.au3>\n",
            ";~ This is to get mouse position relatively to the window, not to the screen (by default)",
            "Opt(\"MouseCoordMode\", 2)\n",
            "Global \\$scrW = 800, \\$scrH = 600",
            "_GEng_Start(\"MyGame\", \\$scrW, \\$scrH)\n",
            "\\$Font = _GEng_Font_Create(\"Garamond\", 20, 1, 0, 2)",
            "\\$Text = _GEng_Text_Create(\\$Font, \"\", \\$GEng_Color_Navy, \\$scrW - 100, 0, 100, 20)\n",
            "Do",
            "\t_GEng_ScrFlush(\\$GEng_Color_White)",
            "\t;~ ---\t\n",
            "\t;~ ---",
            "\t\\$FPS = _GEng_FPS_Get()",
            "\tIf \\$FPS <> -1 Then",
            "\t\t_GEng_Text_StringSet(\\$Text, Round(\\$FPS) & \" FPS\")",
            "\tEndIf",
            "\t_GEng_Text_Draw(\\$Text)",
            "\t_GEng_ScrUpdate()",
            "Until GuiGetMsg() = \\$GUI_EVENT_CLOSE\n",
            "_GEng_Text_Delete(\\$Text)",
            "_GEng_Font_Delete(\\$Font)",
            "_GEng_Shutdown()"
        ],
        "description": "Basic structure to create a game with the G-Engine.",
        "scope": "source.autoit"
    }
}
